<?xml version="1.0" encoding="UTF-8"?>
<declared_type_set xmlns="urn:jaus:jsidl:1.0" name="HandoffControllerClass"
	id="urn:jaus:jss:iop:MessageSet:HandoffControllerClass" version="1.0">
	<declared_type_set_ref name="basicTypes"
		id="urn:jaus:jss:core:MessageSet:BasicTypes" version="1.0" />
	<declared_type_set_ref name="advTypes"
		id="urn:jaus:jss:iop:MessageSet:AdvTypes" version="1.0" />

	<message_def name="RequestReleaseControl" message_id="FF38"
		is_command="false">
		<description xml:space="preserve">This message is sent to the current controlling client to provide it with a list of all clients that are requesting a control handoff.</description>
		<declared_header name="MsgHeader" declared_type_ref="basicTypes.JAUSApplicationLayerHeader"/>
		<body name="Body">
			<list name="RequestReleaseControlList" optional="false">
				<count_field min_count="0" max_count="255"
					field_type_unsigned="unsigned byte" />
				<record name="RequestReleaseControlRec" optional="false">
					<fixed_field name="ID" optional="false" field_units="one"
						field_type="unsigned byte" />
					<fixed_field name="SrcSubsystemID" optional="false"
						field_units="one" field_type="unsigned short integer">
						<value_set offset_to_lower_limit="false">
							<value_range lower_limit="0" lower_limit_type="inclusive"
								upper_limit="65534" upper_limit_type="inclusive" />
						</value_set>
					</fixed_field>
					<fixed_field name="SrcNodeID" optional="false"
						field_units="one" field_type="unsigned byte">
						<value_set offset_to_lower_limit="false">
							<value_range lower_limit="0" lower_limit_type="inclusive"
								upper_limit="254" upper_limit_type="inclusive" />
						</value_set>
					</fixed_field>
					<fixed_field name="SrcComponentID" optional="false"
						field_units="one" field_type="unsigned byte">
						<value_set offset_to_lower_limit="false">
							<value_range lower_limit="0" lower_limit_type="inclusive"
								upper_limit="254" upper_limit_type="inclusive" />
						</value_set>
					</fixed_field>
					<fixed_field name="AuthorityCode" optional="false"
						field_units="one" field_type="unsigned byte" />
					<variable_length_string name="Explanation"
						optional="false">
						<count_field min_count="0" max_count="255"
							field_type_unsigned="unsigned byte" />
					</variable_length_string>
				</record>
			</list>
		</body>
		<footer name="Footer" />
	</message_def>

	<message_def name="ConfirmReleaseControl" message_id="FF39"
		is_command="false">
		<description xml:space="preserve">Used to confirm, deny, or defer decision on handoff requests to the controlling client.  At most one request can be confirmed, and in that case, all other requests must be denied.</description>
		<declared_header name="MsgHeader" declared_type_ref="basicTypes.JAUSApplicationLayerHeader"/>
		<body name="Body">
			<list name="ReleaseControlList" optional="false">
				<count_field min_count="0" max_count="255"
					field_type_unsigned="unsigned byte" />
				<record name="ReleaseControlRec" optional="false">
					<fixed_field name="ID" optional="false" field_units="one"
						field_type="unsigned byte" />
					<fixed_field name="ResponseCode" optional="false"
						field_units="one" field_type="unsigned byte">
						<value_set offset_to_lower_limit="false">
							<value_enum enum_index="0" enum_const="GRANTED" />
							<value_enum enum_index="1" enum_const="DENIED" />
							<value_enum enum_index="2" enum_const="WAIT" />
						</value_set>
					</fixed_field>
				</record>
			</list>
		</body>
		<footer name="Footer" />
	</message_def>

</declared_type_set>
